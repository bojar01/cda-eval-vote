{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between py-2 px-5">
        <h1>Session</h1>
        <a class="button button-perso-primary" href="{{ path('app_session_index') }}">Retour Ã  la liste</a>
    </div>

    <!-- {{ dump(session.users) }} -->

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ session.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="button button-perso-secondary" href="{{ path('app_session_edit', {'id': session.id}) }}">Modifier</a>

    {{ include('session/_delete_form.html.twig') }}

    <h2>Etudiants de la session</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>action</th>
            </tr>
        </thead>
        {% for user in session.users %}
            <tr>
                <td>{{ user.firstname }}</td>
            <td>{{ user.lastname }}</td>
            <td><a href="{{ path('app_user_edit', {'id': session.id}) }}" class="button button-perso-secondary">Modifier</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
