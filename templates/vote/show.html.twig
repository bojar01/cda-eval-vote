{% extends 'base.html.twig' %}

{% block title %}Vote{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-between py-2 px-5">
        <h1>Vote</h1>
        <a class="button button-perso-primary" href="{{ path('app_vote_index') }}">Retour à la liste</a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vote.id }}</td>
            </tr>
            <tr>
                <th>Session</th>
                <td><span class="perso-badge-primary">{{ vote.sessionId.name }}</span></td>
            </tr>
            <tr>
                <th>Début candidature</th>
                <td>{{ vote.applicationStart ? vote.applicationStart|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin candidature</th>
                <td>{{ vote.applicationEnd ? vote.applicationEnd|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Début élection</th>
                <td>{{ vote.electionStart ? vote.electionStart|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin élection</th>
                <td>{{ vote.electionEnd ? vote.electionEnd|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a class="button button-perso-secondary" href="{{ path('app_vote_edit', {'id': vote.id}) }}">Modifier</a>
        {{ include('vote/_delete_form.html.twig') }}
    </div>
    
    <h2>Candidats</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Prénom</th>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
            {% for candidate in vote.candidates %}
        <tr>
            <td>{{candidate.user.firstname}}</td>
            <td>{{candidate.user.lastname}}</td>
        </tr>
    {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
